{
  "name": "meditation-app",
  "version": "1.0.0",
  "description": "A soothing meditation desktop app with voice guidance",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.meditation.app",
    "productName": "Meditation App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "meditation",
    "wellness",
    "mindfulness",
    "desktop-app"
  ],
  "author": "Meditation App Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.0",
    "axios": "^1.11.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "electron-is-dev": "^3.0.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "css-loader": "^6.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
